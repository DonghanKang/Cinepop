<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mp.cinepop.account.model.AccountDAO">
	<insert id="insertAccount" parameterType="accountVo">
		<selectKey keyProperty="aNo" resultType="int" order="BEFORE">
			select account_seq.nextval from dual
		</selectKey>
		insert into account(aName,id,postcode1,address,detailAddress1,tel,pwd)
		values(#{aName},#{id},#{postcode1},#{address},#{detailAddress1},#{tel},#{pwd})
	</insert>
	
	<insert id="insertPw" parameterType="hashVo">
		
		insert into hash(id,salt,digest)
		values(#{id},#{salt},#{digest})
	</insert>
</mapper>